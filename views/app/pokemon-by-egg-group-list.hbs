{{>header}}

<h1>{{this.name}}</h1>

<div class="card-grid">
    {{#each pokemon}}
        <div class="flip-card">
            <div class="pokemon-card flip-card-inner">
                <div class="flip-card-front">
                    <div class="pokemon-card-image-container">
                        <img src="{{this.sprites.versions.generation-v.black-white.animated.front_default}}" class="pokemon-card-image" alt="{{this.name}} image">
                    </div>
                    <h3 class="pokemon-card-text">{{this.name}}</h3>
                    <p class="pokemon-card-text">Exp: {{this.base_experience}}</p>
                    <p><a  class="card-more-button" href="/app/pokemon-details/{{this.id}}">More on {{this.name}}</a></p>
                </div>
                <div class="flip-card-back">
                    <div class="pokemon-card-image-container">
                        <img src="{{this.sprites.versions.generation-v.black-white.animated.back_default}}" class="pokemon-card-image" alt="{{this.name}} image">
                    </div>
                    <p>Type:</p>
                    {{#each this.types}}
                        <a>{{this}}</a>
                    {{/each}}
                    <p class="pokemon-card-text">Height: {{this.height}}; Weight: {{this.weight}}</p>
                </div>
            </div>
        </div>
    {{/each}}
</div>

{{>footer}}